<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/dashboardAppBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/colltoolbar_height"
        android:animateLayoutChanges="true"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:background="?android:attr/colorPrimary"
            app:collapsedTitleTextAppearance="@style/Dashboard.Toolbar.Collapsed"
            app:contentScrim="?android:attr/colorPrimary"
            app:expandedTitleMarginStart="32dp"
            app:expandedTitleTextAppearance="@style/Dashboard.Toolbar.Expanded"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:maxLines="2"
            app:statusBarScrim="?android:attr/colorPrimary"
            app:toolbarId="@+id/action_bar">

            <Toolbar
                android:id="@+id/appTitle"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:animateLayoutChanges="true"
                android:paddingStart="32dp"
                android:theme="?android:attr/actionBarTheme"
                android:title="@string/snack_no_updates_found"
                android:titleTextAppearance="@style/Dashboard.Toolbar.Collapsed"
                app:layout_collapseMode="pin" />

            <LinearLayout
                android:id="@+id/appblayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:background="@android:color/transparent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/launchSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_margin="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="?android:attr/textColorPrimary"
                    app:srcCompat="@drawable/ic_settings" />
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <FrameLayout
        android:id="@+id/actionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:animateLayoutChanges="true">

        <include
            layout="@layout/update_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true" />

        <include
            layout="@layout/update_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:visibility="gone" />

        <include
            layout="@layout/update_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:visibility="gone" />

        <include
            layout="@layout/update_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:visibility="gone" />

        <include
            layout="@layout/update_install"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:visibility="gone" />

        <include
            layout="@layout/update_reboot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:radius="0sp"
                android:height="55dp"
                android:stateListAnimator="@null"
                android:backgroundTint="@color/colorAccent"
                android:id="@+id/donate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Donate"
                app:icon="@drawable/ic_donate"
                app:iconSize="16dp" />

            <com.google.android.material.button.MaterialButton
                android:radius="0sp"
                android:height="55dp"
                android:stateListAnimator="@null"
                android:backgroundTint="@color/colorAccent"
                android:id="@+id/tele"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Telegram group"
                app:icon="@drawable/ic_telegram"
                app:iconSize="16dp" />
        </LinearLayout>
    </FrameLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>
